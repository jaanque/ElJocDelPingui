<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="vista.pantallaSeleccionController"
      alignment="CENTER" spacing="20.0" prefWidth="400.0" prefHeight="300.0">

    <children>
        <Text text="Benvingut!" style="-fx-fill: #2b2b2b">
            <font>
                <Font size="30.0" />
            </font>
        </Text>

        <Button fx:id="btnNuevaPartida" text="Nova Partida" onAction="#handleNuevaPartida" />
        <Button fx:id="btnCargarPartida" text="Carregar Partida" onAction="#handleCargarPartida" />
    </children>
</VBox>